<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!--Bootstrap-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="/stylesheets/forgotPassword.css">
    <title>ForgotPassword</title>
</head>

<body ng-app="passwordReset" ng-controller="passwordResetCtrl">

<div >
    <div class="container">

        <div class="row">

            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading"><h4>ForgotPassword</h4></div>
                    <div class="panel-body">

                        <div id="forgotPasswordForm">

                            <div class="form-group " >
                                <label class="control-label position" for="email">Email</label>
                                <input type="text" class="form-control position" id="email" aria-describedby="helpBlock" ng-model="forgotPassword.email">
                            </div>

                            <div class="form-group">
                                <button type="button" class="btn btn-primary" id="forgotPasswordButton" ng-click="email()">Submit</button>
                            </div>
                        </div>

                        <p ng-show="message === 'Check your email for temporary password'" class="bg-success">{{message}}</p>
                        <p ng-show="message === 'email does not exist , register to the website'" class="bg-danger">{{message}}</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
<script src="../javascripts/forgotPassword.js"></script>
</body>

</html>