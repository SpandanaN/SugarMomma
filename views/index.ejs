    <script type="text/javascript">
      var text = ["CONNECT", "LEARN", "SHARE"];
      var counter = 0;
      var elem = document.getElementById("changeText");
      setInterval(change, 2000);
      function change() {
        elem.innerHTML = text[counter];
        counter++;
        if(counter >= text.length) { counter = 0; }
      }
    </script>

