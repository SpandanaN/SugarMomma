<!DOCTYPE html>
<html ng-app="usersList">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SugarMomma</title>
    <link rel='stylesheet' href='../stylesheets/usersList_style.css' />
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.7/angular.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="../javascripts/usersList_controller.js"></script>
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro' rel='stylesheet' type='text/css'>
</head>

<body data-spy="scroll" data-target=".navbar-collapse" ng-controller="UsersController as userList" id="userListBody">

<header class="nav-down">
    <div class="navbar transparent navbar-static-top">

        <div class="container">

            <div class="navbar-header">
                <a href="/" class="navbar-brand" id="title">Sugar Mommas</a>
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>


            <div class="collapse navbar-collapse" id="menu">

                <ul class="nav navbar-nav navbar-right">
                    <li class="active navbar-right menu-list"><a href="/" class="blue">LOG OUT</a></li>
                </ul>

                <p class="navbar-text navbar-right">Welcome {{user.name}}!</p>
            </div>


        </div>
    </div>
</header>

    <div class="container" id="user-container">

        <div class="row" ng-repeat="eachUser in users" ng-if="$even" >
        <div class="col-md-2"></div>

        <div class="col-md-4 list-column">

                <div class="panel-body">

                    <div class="media">
                        <div class="media-left">

                                <img class="media-object " src="../images/profilePic/{{eachUser.dp_src}}" width="150px" height="150px">

                        </div>
                        <div class="media-body">

                            <a href="#profile-modal" data-toggle="modal" data-target="#profile-modal" ng-click="getUserDetails(eachUser._id)"><h3 class="text">{{eachUser.name}}</h3></a>
                            <h5 class="text">{{eachUser.iama}}</h5>
                            <div id="profile-modal" class="modal fade" role="dialog">
                                <div class="modal-dialog">


                                    <div class="modal-content">

                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <div class="media">
                                                <div class="media-left">
                                                    <a href="#">
                                                        <img class="media-object " src="../images/profilePic/{{userDetails.dp_src}}" width="200px" height="200px">
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <h3 class="text">{{userDetails.name}}</h3>
                                                    <h5 class="text">Status: {{userDetails.iama}}</h5>

                                                    <h5 class="text">Lives In: {{userDetails.location}}</h5>
                                                    <h5 class="text">Email:{{userDetails.email}}</h5>

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>


                        </div>
                    </div>

                </div>

        </div>

        <div class="col-md-4 list-column">

                <div class="panel-body">

                    <div class="media">
                        <div class="media-left">

                                <img class="media-object " src="../images/profilePic/{{users[$index+1].dp_src}}" width="150px" height="150px">

                        </div>
                        <div class="media-body">
                            <a href="#profile-modal" data-toggle="modal" data-target="#profile-modal" ng-click="getUserDetails(users[$index+1]._id)"><h3 class="text">{{users[$index+1].name}}</h3></a>
                            <h5 class="text">{{users[$index+1].iama}}</h5>
                            <div id="profile-modal" class="modal fade" role="dialog">
                                <div class="modal-dialog">


                                    <div class="modal-content">

                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            <div class="media">
                                                <div class="media-left">
                                                    <a href="#">
                                                        <img class="media-object " src="../images/profilePic/{{userDetails.dp_src}}" width="200px" height="200px">
                                                    </a>
                                                </div>
                                                <div class="media-body">
                                                    <h3 class="text">{{userDetails.name}}</h3>
                                                    <h5 class="text">Status: {{userDetails.iama}}</h5>

                                                    <h5 class="text">Lives In: {{userDetails.location}}</h5>
                                                    <h5 class="text">Email:{{userDetails.email}}</h5>

                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>

                </div>

        </div>

        <div class="col-md-2"></div>
    </div>
    </div>

<footer>
    <div class="container" id="footer">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8 footer-setting center">

                <p class="footer-copyright white">Â© 2015 SugarMommas</p>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
</footer>

<script>
    $("#user-container").css("height",$(window).height());
</script>

</body>
</html>
